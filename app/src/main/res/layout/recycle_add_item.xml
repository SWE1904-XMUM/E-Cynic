<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <!--Checkbox List-->
            <RelativeLayout
                android:id="@+id/RL2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/arr_noOfItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1mm"
                    android:fontFamily="@font/inder"
                    android:text="Item 1"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/LL_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/arr_noOfItem"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/sp_itemSelection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" />

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/RL_imgUpload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/LL_checkbox"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/tv_uploadImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1mm"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/inder"
                        android:text="@string/upload_your_image"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/uploadImg"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_below="@+id/tv_uploadImg"
                        android:layout_alignLeft="@+id/tv_uploadImg"
                        android:background="@color/grey"
                        android:padding="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_upload_24" />

                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_centerInParent="true"
                    android:background="@color/dark_green"
                    android:layout_marginTop="3mm"
                    android:layout_below="@+id/RL_imgUpload"/>

            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>