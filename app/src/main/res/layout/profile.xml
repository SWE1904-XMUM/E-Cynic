<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/apple_green">

        <TextView
            android:id="@+id/redeemNameList"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/playfair_display_black"
            android:text="Profile"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/logoutBtn"
            android:layout_width="43dp"
            android:layout_height="38dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_baseline_logout_24"
            app:tint="@color/white" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/profileImg"
                        android:layout_width="135dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="5dp"
                        app:layout_constraintBottom_toTopOf="@id/redeemPointsBtn"
                        app:layout_constraintEnd_toEndOf="@id/redeemPointList"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/redeemNameList"
                        app:srcCompat="@drawable/tree1" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="3dp"
                            android:fontFamily="@font/playfair_display_black"
                            android:text="Username"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/profileUname"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@id/profileImg"
                            app:layout_constraintTop_toBottomOf="@+id/redeemNameList" />

                        <TextView
                            android:id="@+id/profileUname"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="3dp"
                            android:fontFamily="@font/inder"
                            android:text="'NameHere'"
                            android:textColor="@color/black"
                            android:textSize="24dp"
                            app:layout_constraintBottom_toTopOf="@+id/myRewardBtn"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@id/profileImg"
                            app:layout_constraintTop_toBottomOf="@+id/redeemPointList" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_list"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:padding="3dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/redeemPointsBtn"
                                    android:layout_width="74dp"
                                    android:layout_height="61dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    app:srcCompat="@drawable/ic_baseline_card_giftcard_24"
                                    app:tint="@color/dark_green" />

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="1dp"
                                    android:fontFamily="@font/playfair_display_black"
                                    android:text="Redeem Points"
                                    android:textSize="14sp"
                                    app:layout_constraintBottom_toTopOf="@+id/textView5"
                                    app:layout_constraintEnd_toEndOf="@id/textView6"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/redeemPointsBtn" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="3dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_gravity="center"
                                android:background="@color/black"
                                android:orientation="vertical"></LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:padding="3dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/myRewardBtn"
                                    android:layout_width="74dp"
                                    android:layout_height="61dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    app:srcCompat="@drawable/ic_baseline_stars_24"
                                    app:tint="@color/dark_green" />

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="1dp"
                                    android:fontFamily="@font/playfair_display_black"
                                    android:text="  My Rewards  "
                                    android:textSize="14sp"
                                    app:layout_constraintBottom_toTopOf="@+id/textView5"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="@id/redeemDateList"
                                    app:layout_constraintTop_toBottomOf="@+id/myRewardBtn" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/playfair_display_black"
                        android:text="Email"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/profileEmail"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/redeemDateList" />

                    <TextView
                        android:id="@+id/profileEmail"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/inder"
                        android:text="'EmailHere'"
                        android:textColor="@color/black"
                        android:textSize="22dp"
                        app:layout_constraintBottom_toTopOf="@+id/textView6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/playfair_display_black"
                        android:text="Phone Number"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/profilePhone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profileEmail" />

                    <TextView
                        android:id="@+id/profilePhone"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/inder"
                        android:text="'PhoneNoHere'"
                        android:textColor="@color/black"
                        android:textSize="22dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">
    
                    <Button
                            android:id="@+id/btn_addresses"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="80dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="80dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/bg_button"
                            android:text="Saved Addresses"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textColorHighlight="@color/white"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                    <Button
                        android:id="@+id/editBtn"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="80dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_button"
                        android:text="EDIT PROFILE"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/aboutBtn"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="80dp"
                        android:layout_marginBottom="50dp"
                        android:background="@drawable/bg_button"
                        android:text="ABOUT E-CYNIC"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textColorHighlight="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/btmNav"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_addresses" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btmNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:background="@color/apple_green"
        app:itemIconTint="@drawable/tab_color"
        app:itemTextColor="@drawable/tab_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>