<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_green"
        app:contentPadding="7dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey">

            <ImageView
                android:id="@+id/itemImageList"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="3dp"
                android:background="@color/apple_green"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/computer" />

            <TextView
                android:id="@+id/itemNameList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/itemImageList"
                android:padding="5dp"
                android:text="Item Name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/numberOfItemsList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemNameList"
                android:layout_toRightOf="@+id/itemImageList"
                android:padding="5dp"
                android:text="Number of Item"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/priceList"
                app:layout_constraintStart_toEndOf="@+id/itemImageList"
                app:layout_constraintTop_toBottomOf="@+id/itemNameList" />

            <TextView
                android:id="@+id/priceList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numberOfItemsList"
                android:layout_toRightOf="@+id/itemImageList"
                android:padding="5dp"
                android:text="Price"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/itemImageList" />

            <TextView
                android:id="@+id/dateList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/itemNameList"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="150dp"
                android:layout_toRightOf="@+id/itemNameList"
                android:padding="5dp"
                android:text="Date"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>